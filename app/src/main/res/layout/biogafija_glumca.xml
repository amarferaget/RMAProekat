<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amar.proektnizadatakrma.MainActivity">

    <TextView
        android:id="@+id/tv_mjestoRodenja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/tv_godinaRodenja"
        android:layout_alignLeft="@+id/tv_godinaRodenja"
        android:layout_alignStart="@+id/tv_godinaRodenja"
        android:layout_marginTop="20dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <ImageView
        android:id="@+id/slikaGlumca"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/tv_godinaRodenja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:layout_alignTop="@+id/slikaGlumca"
        android:layout_toRightOf="@+id/slikaGlumca"
        android:layout_toEndOf="@+id/slikaGlumca" />

    <TextView
        android:id="@+id/tv_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imdb link"
        android:layout_below="@+id/tv_spol"
        android:layout_alignLeft="@+id/tv_mjestoRodenja"
        android:layout_alignStart="@+id/tv_mjestoRodenja"
        android:layout_marginTop="16dp"
        android:onClick="browser"/>

    <TextView
        android:id="@+id/tv_biografija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_link"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/tv_spol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/tv_mjestoRodenja"
        android:layout_alignLeft="@+id/tv_mjestoRodenja"
        android:layout_alignStart="@+id/tv_mjestoRodenja"
        android:layout_marginTop="22dp" />

</RelativeLayout>