<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reziserImage"
        android:layout_width="70dp"
        android:layout_height="107dp"
        app:srcCompat="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/tv_reziser_ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/reziserImage"
        android:layout_toRightOf="@+id/reziserImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_reziser_prezime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tv_reziser_ime"
        android:layout_toRightOf="@+id/tv_reziser_ime"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_reziser_godiste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_reziser_ime"
        android:layout_alignStart="@+id/tv_reziser_ime"
        android:layout_below="@+id/tv_reziser_ime"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_resizer_grad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_reziser_godiste"
        android:layout_alignStart="@+id/tv_reziser_godiste"
        android:layout_below="@+id/tv_reziser_godiste"
        android:text="TextView" />

</RelativeLayout>